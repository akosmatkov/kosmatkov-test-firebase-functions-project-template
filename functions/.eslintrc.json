{
  "root": true,
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": ["eslint:recommended", "google", "plugin:jsdoc/recommended"],
  "rules": {
    "quotes": ["error", "double"],
    "require-jsdoc": "off",
    "valid-jsdoc": "off",
    "jsdoc/require-returns-description": "off",
    "jsdoc/require-param-description": "off",
    "jsdoc/require-returns": "off"
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 12
  },
  "ignorePatterns": ["lib/*"],
  "plugins": ["jsdoc"],
  "settings": {
    "jsdoc": {
      "mode": "typescript"
    }
  }
}
